<ivy-module version="2.0">
    <info organisation="org.ringojs" module="ringojs"/>

    <configurations>
        <conf name="default" description="the default jar libraries"/>
        <conf name="servlet" description="Jetty's orbit jars"/>
    </configurations>

    <dependencies>
        <dependency org="org.mozilla" name="rhino" rev="1.7R5" />

        <!-- standard jetty libs -->
        <dependency org="org.eclipse.jetty" name="jetty-server" rev="9.2.+"/>
        <dependency org="org.eclipse.jetty" name="jetty-servlet" rev="9.2.+"/>
        <dependency org="org.eclipse.jetty" name="jetty-continuation" rev="9.2.+"/>
        <dependency org="org.eclipse.jetty.websocket" name="websocket-server" rev="9.2.+"/>
        <dependency org="org.eclipse.jetty.websocket" name="websocket-client" rev="9.2.+"/>
        <dependency org="org.eclipse.jetty" name="jetty-servlets" rev="9.2.+"/>
        <dependency org="org.eclipse.jetty" name="jetty-xml" rev="9.2.+"/>

        <!-- logging -->
        <dependency org="org.slf4j" name="slf4j-api" rev="1.6.+"/>
        <dependency org="org.slf4j" name="slf4j-log4j12" rev="1.6.+">
            <exclude org="log4j"/>
        </dependency>
        <dependency org="log4j" name="log4j" rev="1.2.14"/>

        <!-- jnr-posix -->
        <dependency org="org.jruby.extras" name="jaffl" rev="0.5.+"/>
        <dependency org="com.github.jnr" name="jnr-posix" rev="3.0.+"/>
        <dependency org="com.github.jnr" name="jffi" rev="1.2.+">
            <artifact name="jffi" type="jar"/>
        </dependency>

        <!-- junit -->
        <dependency org="junit" name="junit" rev="3.8.+"/>
        <!-- jline -->
        <dependency org="jline" name="jline" rev="1.0"/>
    </dependencies>
</ivy-module>
